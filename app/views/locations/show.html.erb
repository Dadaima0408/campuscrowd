<div class="container mt-4">
  <h2 class="mb-4"><%= @location.name %>№╝ѕ<%= @location.category %>№╝Ѕ</h2>

  <div class="mb-4">
    <%= link_to "сЂЊсЂ«та┤ТЅђсЂФТіЋуе┐", new_crowd_report_path(crowd_report: { location_id: @location.id }), class: "btn btn-outline-success" %>
    <%= link_to "та┤ТЅђСИђУдДсЂФТѕ╗сѓІ", locations_path, class: "btn btn-outline-secondary ms-2" %>
  </div>

  <h4 class="mb-3">сЂЊсЂ«та┤ТЅђсЂ«ТиижЏЉсЃгсЃЮсЃ╝сЃѕ</h4>

  <% if @location.crowd_reports.any? %>
    <div class="row">
      <% @location.crowd_reports.order(created_at: :desc).each do |report| %>
        <div class="col-md-6 mb-4">
          <div class="card border-success shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title">
                <span class="badge bg-success">сЃгсЃЎсЃФ: <%= report.level %></span>
              </h5>
              <p class="card-text mt-2"><%= report.comment %></p>
            </div>
            <div class="card-footer text-muted text-end" style="font-size: 0.85em;">
              ТіЋуе┐ТЌЦТЎѓ: <%= report.created_at.strftime("%Y/%m/%d %H:%M") %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">сЂЙсЂаТиижЏЉсЃгсЃЮсЃ╝сЃѕсЂїсЂѓсѓісЂЙсЂЏсѓЊсђѓ</p>
  <% end %>
</div>


<h3>­ЪЊѕ ТиижЏЉсЃгсЃЎсЃФт▒ЦТГ┤</h3>
<%= line_chart @reports.group_by_day(&:created_at).average(:level), xtitle: "ТЌЦС╗ў", ytitle: "ТиижЏЉсЃгсЃЎсЃФ", min: 1, max: 5 %>